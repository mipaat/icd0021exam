@using BLL.Identity
@model List<Domain.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1>Recipes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Servings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].PrepareTimeMinutes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].IsPrivate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Creator)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
            </td>
            <td>
                @item.Servings
            </td>
            <td>
                @item.PrepareTimeMinutes
            </td>
            <td>
                @item.IsPrivate
            </td>
            <td>
                @item.Creator?.UserName
            </td>
            <td>
                @if (User.IsAllowedToManageRecipe(item))
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>